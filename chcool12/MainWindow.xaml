<Window x:Class="chcool12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chcool12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="73"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="39"/>
            <RowDefinition Height="375"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#FFE7FABF" Grid.ColumnSpan="2" Margin="0,0,-657,0"></Rectangle>
        <Rectangle Grid.RowSpan="2" Fill="#FFE7FABF" Margin="0,0,0,-20"></Rectangle>
        <Image Source="res/school_logo.png"></Image>

        <StackPanel Grid.Row="1"
                     VerticalAlignment="Bottom" Margin="5">
            <Button x:Name="BackBut">Назад</Button>
            <Button x:Name="ForwardBut">Впеерд</Button>
        </StackPanel>

        <TextBlock x:Name="TitleTB" Grid.Column="1" HorizontalAlignment="Stretch" Margin="249,0,-345,0" >Школа языков "Леарн"</TextBlock>
        <Frame Grid.Row="1" Grid.Column="1" x:Name="MainFrame"></Frame>
    </Grid>
</Window>
